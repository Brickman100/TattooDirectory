{
    "widgets": [
        {
            "type": "metric",
            "x": 0,
            "y": 0,
            "width": 12,
            "height": 6,
            "properties": {
                "metrics": [
                    [ "AWS/Config", "ComplianceByConfigRule", "RuleName", "${project_name}-s3-bucket-public-access-prohibited", "ComplianceType", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-s3-bucket-server-side-encryption-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-dynamodb-table-encryption-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-dynamodb-pitr-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-lambda-concurrency-check", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-lambda-function-public-access-prohibited", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-lambda-inside-vpc", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-api-gw-execution-logging-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-cloudfront-origin-access-control-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-cloudfront-viewer-policy-https", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-vpc-default-security-group-closed", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-vpc-flow-logs-enabled", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-iam-policy-no-statements-with-admin-access", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-iam-user-no-policies-check", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ],
                    [ ".", ".", "RuleName", "${project_name}-kms-cmk-not-scheduled-for-deletion", ".", "COMPLIANT" ],
                    [ "...", "NON_COMPLIANT" ]
                ],
                "view": "timeSeries",
                "stacked": false,
                "region": "${region}",
                "title": "Config Rule Compliance",
                "period": 300
            }
        },
        {
            "type": "metric",
            "x": 12,
            "y": 0,
            "width": 12,
            "height": 6,
            "properties": {
                "metrics": [
                    [ "${project_name}/Security", "SecurityAlerts" ]
                ],
                "view": "timeSeries",
                "stacked": false,
                "region": "${region}",
                "title": "Security Alerts",
                "period": 300
            }
        },
        {
            "type": "log",
            "x": 0,
            "y": 6,
            "width": 24,
            "height": 6,
            "properties": {
                "query": "SOURCE '/aws/cloudtrail/${project_name}'\n| fields @timestamp, sourceIPAddress, userIdentity.type, eventName, errorCode\n| filter errorCode exists\n| sort @timestamp desc\n| limit 20",
                "region": "${region}",
                "title": "Recent CloudTrail Errors",
                "view": "table"
            }
        },
        {
            "type": "log",
            "x": 0,
            "y": 12,
            "width": 24,
            "height": 6,
            "properties": {
                "query": "SOURCE '/aws/cloudtrail/${project_name}'\n| fields @timestamp, sourceIPAddress, userIdentity.type, eventName\n| filter sourceIPAddress not like /^AWS Internal/\n| stats count() by sourceIPAddress\n| sort count desc\n| limit 10",
                "region": "${region}",
                "title": "Top Source IP Addresses",
                "view": "table"
            }
        }
    ]
}